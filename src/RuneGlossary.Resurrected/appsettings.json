{
  "Database": "Host=mihben.work;Username=postgres;Password=AaZ9SGvNyEjsBuzc;Database=rune_glossary",

  "Serilog": {
    "Usings": [ "Serilog.Sinks.Console", "Serilog.Sinks.GrafanaLoki" ],
    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
        "Microsoft": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "OutputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}",
          "RestrictedToMinimumLevel": "Information"
        }
      },
      {
        "Name": "GrafanaLoki",
        "Args": {
          "Uri": "https://promtail.mihben.work",
          "PropertiesAsLabels": [
            "Application",
            "Environment",
            "level"
          ]
        }
      }
    ],
    "Enrich": [ "FromLogContext" ],
    "Properties": {
      "Application": "RuneGlossary.Resurrected",
      "Environment": "Production"
    }
  },

  "AllowedHosts": "*"
}
